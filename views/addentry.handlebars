<div class="entryCard">
  <h2>Add an Entry</h2>
  <form enctype="multipart/form-data" method="POST" action="/api/entry">
    <div class="input-field col s12">
      <input class="new-entry-title" id="input_text" type="text" data-length="10" name="name" />
      <label for="input_text">Enter Entry Title</label>
    </div>
    <div class="input-field col s12">
      <textarea id="textarea2" class="materialize-textarea new-entry-text" data-length="250" name="text"></textarea>
      <label for="textarea2">Enter Entry text</label>
    </div>
    <div class="file-field input-field">
      <div class="btn">
        <span>File</span>
        <input type="file" name="photo" />
      </div>
      <div class="file-path-wrapper">
        <input class="file-path validate" type="text" />
      </div>
    </div>
    <button type="submit" class="waves-effect waves-light btn btnColor" id="entry-btn">Submit Entry</button>
  </form>
</div>



<script src="/js/entries.js"></script>