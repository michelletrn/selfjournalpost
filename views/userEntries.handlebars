<div class="entries-page-container row">
  <div class="entry-container col s8">

    {{#each entries as |entry|}}
    {{> entry-details}}

    <div class="comments-container card">
      <label for="comment-text" id="commentLabel"> Add a Comment:</label>
      <form class="form new-comment-form">
        <textarea class="form-input" id="comment-text" name="comment-text"></textarea>
        <button type="submit" class="addComment btn-floating btn-small waves-effect waves-light btn"
          data-entry-id="{{id}}">+</button>
      </form>
      <label for="comment-text" id="commentLabel">Comments for "{{name}}":</label>
      {{#each entry.comments as |comment|}}
      {{> comment-details }}
      {{/each}}
    </div>
    <button class="btn delete-entry grey" data-delete-entry-id="{{id}}">Delete Entry</button>

    <hr />
    <br />
    {{/each}}
  </div>

  <div class="col s4">
    <div class="card entry-action">
      <div>
        <h5>Write Entry:</h5>
        <a href="/entry" class="btn-floating btn-medium waves-effect waves-light btn"><i class='bx bxs-edit'></i></a>
      </div>
      <br />
      <div>
        <h5>My Entries:</h5>
        <a href="/userentries" class="btn-floating btn-medium waves-effect waves-light btn"><i
            class='bx bx-file-find'></i></a>
      </div>
    </div>


    <div class="card goal-container">
      <div class="active-goals">
        <h4>Goals:</h4>
        {{#each goals as |goal|}}
        <div class="goal">
          <p>{{goal.goal}}</p>
          <button class="btn-floating btn-small waves-effect waves-light btn"><i class="bx bx-trash deleteGoal"
              data-deleteGoal-id="{{id}}"></i></button>
        </div>
        {{/each}}
        <hr>
      </div>
      <form class="submit-goal">
        <label for="goal-input">Enter Goal</label>
        <input class="new-goal-title" id="goal-text" type="text" data-length="10" placeholder="homework">
        <button type="submit" class="btn" id="goal-btn">Add Goal</button>
      </form>
    </div>
  </div>
</div>

<script src="/js/comment.js"></script>
<script src="/js/deleteEntries.js"></script>
<script src="/js/wellness.js"></script>
<script src="/js/entries.js"></script>