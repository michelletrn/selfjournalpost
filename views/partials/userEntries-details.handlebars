<div class="row mb-4 project card">
  <div class="col-md-5">
    <button
      class="btn delete-entry grey"
      data-delete-entry-id="{{id}}"
    >Delete Entry</button>
    <h3 class="entry-title">{{name}}</h3>
    <p class="entry-user">Entry by:
      {{user.first_name}}
      {{user.last_name}}
      on
      {{format_date date_created}}.
    </p>
    {{#if imageUrl }}
    <img src="{{imageUrl}}" alt="user img" width="500px"/>
    {{/if}}
    <div class="col-md-7">
      <p class="entry-text">
        {{text}}
      </p>
    </div>
  </div>
</div>