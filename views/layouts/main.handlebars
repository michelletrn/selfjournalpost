        <a href="/" class="btn-flat">Home</a>
        <a href="/login" class="btn-flat">Login</a>
        <a href="/signup" class="btn-flat">Sign up</a>
      {{/if}}
    </nav>
    <main>

      {{{body}}}

    </main>
  </body>

  <script src="/js/index.js"></script>
